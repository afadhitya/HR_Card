<odoo>
	<record id="view_form_print_card" model="ir.ui.view">
		<field name="name">Print Card Form</field>
		<field name="model">print.card</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group name="group_top">
						<group name="group_left">
							<label for="EmployeeInformation" string="Employee Information"/>
							<field name="employee_ids"/>
							<field name="department_id"/>
							<field name="job_title"/>
						</group>
						<group name="group_right">
							<field name="card_Type"/>
							<field name="card_Id"/>
							<field name="request_Date"/>
							<field name="reason"/>
							<field name="status"/>
							<field name="active_Periode" attrs="{'invisible':[('status','!=','temporary')]}"/>
						</group> 
					</group>
				</sheet>
			</form>
		</field>
	</record>
</odoo>