<?xml version="1.0"?>
<odoo>
	<record id="view_form_print_card" model="ir.ui.view">
		<field name="name">Print Card Form</field>
		<field name="model">hr.card</field>
		<field name="arch" type="xml">
			<form>
				<header>
				<!-- Button go here -->
					<button name="do_send_approval" type="object" string="Send Approval" class="btn-primary" states="draft" />

					<button name="do_approve" type="object" string="Approve" class="btn-primary" states="waiting"/>

					<button name="do_refuse" type="object" string="Refuse" class="btn-primary" states="waiting"/>

					<button name="%(action_card_report)d" string="Print Card" type="action" class="btn-primary" attrs="{'invisible':['|',('card_Type','!=','id_card'), ('state','!=','progress')]}"/>

					<button name="%(action_business_card_report)d" string="Print Card" type="action" class="btn-primary" attrs="{'invisible':['|',('card_Type','!=','business_card'), ('state','!=','progress')]}"/>	

					<button name="do_done" type="object" string="Done" class="btn-primary" states="progress"/>

					<field name="state" widget="statusbar" statusbar_visible="draft,waiting,progress,done" on_change="1" modifiers="{'readonly': true}"/>
				</header>

				<sheet>
					<div class="oe_title">
					</div>
					<group name="group_top">
						<group>
							<group string="Employee Information">
								<field name="employee_ids"/>
								<field name="department_id"/>
								<field name="job_title"/>
							</group>
						</group>
					<group>
							<group string="Card Information" colspan="4">
								<field name="card_Type"/>
								<field name="card_Id" attrs="{'invisible':[('card_Type','!=','id_card')]}"/>
								<field name="request_Date"/>
								<field name="status" attrs="{'invisible':[('card_Type','!=','id_card')]}"/>
								<field name="active_Periode" attrs="{'invisible':[('status','!=','temporary')]}"/>
							</group>
						</group>
					</group>
					<group name="group_bottom">
						<notebook>
							<page string="Reason">
								<field name="description"/>
							</page>
						</notebook>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="view_tree_print_card" model="ir.ui.view">
		<field name="name">Print Card Tree</field>
		<field name="model">hr.card</field>
		<field name="arch" type="xml">
			<tree>
				<field name="card_Id"/>
				<field name="card_Type"/>
				<field name="employee_ids"/>
				<field name="department_id"/>
				<field name="request_Date"/>
				<field name="status"/>
			</tree>
		</field>
	</record>
</odoo>
