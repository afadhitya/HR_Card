<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_business_card_template">
    <t t-call="report.html_container">
      <t t-call="report.external_layout">
        <div class="page">
          <t t-foreach="docs" t-as="o">
            <div class="row mt32 mb32" id="informations">

              <div t-if="o.company_id" class="col-xs-6">
                <img t-attf-src="data:image/*;base64,{{o.company_id.logo}}" style="width:100%;height:20%;"/>
              </div>

              <div t-if="o.company_id" class="col-xs-6">
                <strong>Company Name: </strong><p t-field="o.company_id"/>
              </div>

              <div t-if="o.employee_ids" class="col-xs-6">
                <strong>Employee: </strong><p t-field="o.employee_ids"/>
              </div>

              <div t-if="o.company_id" class="col-xs-6">
                <strong>Company Address: </strong><p t-field="o.company_id.street"/>
                <p t-field="o.company_id.street2"/>
                <span t-field="o.company_id.city"/> <span t-field="o.company_id.state_id"/> <span t-field="o.company_id.zip"/>
              </div>

               <div t-if="o.company_id" class="col-xs-6">
                <strong>Company Phone: </strong><p t-field="o.company_id.phone"/>
              </div>

               <div t-if="o.company_id" class="col-xs-6">
                <strong>Company Fax: </strong><p t-field="o.company_id.fax"/>
              </div>

              <div t-if="o.company_id" class="col-xs-6">
                <strong>Company Email: </strong><p t-field="o.company_id.email"/>
              </div>
              
            </div>
          </t>
        </div>
      </t>
    </t>
  </template>
</odoo>
